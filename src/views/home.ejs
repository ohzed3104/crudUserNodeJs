<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Homepage</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: #f5f7fa;
      
    }
 h2 {
      text-align: center;
      color: #333;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      background: #fff;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      border-radius: 8px;
      overflow: hidden;
    }
    thead {
      background: #1e3c72;
      background: linear-gradient(90deg, #2a5298, #1e3c72);
      color: #fff;
    }

    th, td {
      padding: 12px 16px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

 /* Chỉ hover cho các dòng trong tbody */
tbody tr:hover {
  background-color: #f1f1f1;
}
/* Chỉ hover từ dòng thứ 2 trở đi */
tbody tr:not(:first-child):hover {
  background-color: #f1f1f1;
}



    

    th {
      text-transform: uppercase;
      font-size: 14px;
      letter-spacing: 1px;
    }

    td {
      font-size: 15px;
      color: #333;
    }

    /* Responsive */
    @media (max-width: 600px) {
      table, thead, tbody, th, td, tr {
        display: block;
      }
      thead {
        display: none;
      }
      tr {
        margin-bottom: 15px;
        background: #fff;
        border-radius: 8px;
        padding: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      }
      td {
        border: none;
        display: flex;
        justify-content: space-between;
        padding: 8px;
      }
      td::before {
        content: attr(data-label);
        font-weight: bold;
        text-transform: capitalize;
        color: #555;
      }
    }
    nav {
      background: #1e3c72; /* xanh đậm */
      background: linear-gradient(90deg, #2a5298, #1e3c72); /* gradient */
      padding: 1rem 2rem;
      display: flex;
      justify-content: flex-start;
      gap: 1.5rem;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    nav a {
      color: white;
      text-decoration: none;
      font-size: 1rem;
      font-weight: 500;
      position: relative;
      transition: color 0.3s ease;
    }

    nav a::after {
      content: "";
      position: absolute;
      bottom: -4px;
      left: 0;
      width: 0;
      height: 2px;
      background: #ffcc00; /* gạch chân màu vàng */
      transition: width 0.3s ease;
    }

    nav a:hover {
      color: #ffcc00;
    }

    nav a:hover::after {
      width: 100%;
    }
  </style>
</head>
<body>
  <nav>
    <a href="/">Home</a>
    <a href="/useradd">Create Users</a>
  </nav>
  
  <h2>User List</h2>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Name</th>
        <th>City</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% listUsers.forEach(user => { %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.city %></td>
        
        <td>
          <a href="/edit/<%= user.id %>" >edit</a>
          <form action="/delete/<%= user.id %>" method="post">
            <button>delete</button>
          </form>

        </td>
      </tr>
    <% }) %>
    
     
    </tbody>
  </table>
</body>
</html>
